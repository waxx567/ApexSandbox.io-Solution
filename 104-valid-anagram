public boolean isAnagram(String s1, String s2) {
    // null check
    if (s1 == null || s2 == null) {
        return false;
    }

    String alphabet = 'abcdefghijklmnopqrstuvwxyz';

    Map<String, Integer> map1 = new Map<String, Integer>();
    Map<String, Integer> map2 = new Map<String, Integer>();

    for (Integer i = 0; i < s1.length(); i++) {
        Integer index = s1.charAt(i) + 97;
        String c1 = alphabet(index);
        if (map1.containsKey(c1)) {
            Integer i1 = map1.get(c1);
            i1++;
        } else {
            map1.put(c1, 1);
        }
    }

    for (Integer j = 0; j < s1.length(); j++) {
        if (map2.containsKey(s2.charAt(j))) {
            Integer j1 = map2.get(s2.charAt(j));
            j1++;
        } else {
            map2.put(s2.charAt(j), 1);
        }
    }

    // Compare maps

    return true;
}