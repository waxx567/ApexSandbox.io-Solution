public List<Integer> evenNumbers(Integer n) {
    List<Integer> nEvenNumberList = new List<Integer>();
    Integer listInt = 2;
    if (n > 0) {
        nEvenNumberList.add(listInt);
        for (Integer i = 1; i < n; i++) {
            listInt += 2;
            nEvenNumberList.add(listInt);
        }
    }
    return nEvenNumberList;
}