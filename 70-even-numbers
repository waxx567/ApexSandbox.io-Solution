public List<Integer> evenNumbers(Integer n) {
    List<Integer> nEvenNumList = new List<Integer>();
    Integer listInt = 2;
    if (n > 0) {
        nEvenNumList.add(listInt);
        for (Integer i = 1; i < n; i++) {
            listInt += 2;
            nEvenNumList.add(listInt);
        }
    }
    return nEvenNumList;
}