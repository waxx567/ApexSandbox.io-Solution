public List<Integer> evenNumbers(Integer n) {
    List<Integer> nEvenNumbers = new List<Integer>();
    Integer listInt = 2;
    if (n > 0) {
        nEvenNumbers.add(listInt);
        for (Integer i = 1; i < n; i++) {
            listInt += 2;
            nEvenNumbers.add(listInt);
        }
    }
    return nEvenNumbers;
}