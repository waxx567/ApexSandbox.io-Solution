public Boolean isPalindrome(String str){
    String revisedString = '';

    for (Integer i = 0; i < str.length(); i++) {
        if (str.charAt(i).isAlpha()) {
            revisedString += str.charAt(i).toLowerCase();
        }
    }
    for (Integer i = 0; i < revisedString.length(); i++) {
        for (Integer j = revisedString.length() - 1; j >= 0; j--) {
            if (revisedString.charAt(i) != revisedString.charAt(j)) {
                return false;
            }
        }
    }

    return true;
}