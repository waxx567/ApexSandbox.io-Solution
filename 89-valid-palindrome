public Boolean isPalindrome(String str){
    str = str.toLowerCase();

    String secondString = '';
    
    Pattern nonAlphanumeric = Pattern.compile('[^a-z0-9]');
    Matcher matcher = nonAlphanumeric.matcher(str);
    matcher.replaceAll('');
    
    for (Integer i = str.length() - 1; i >= 0; i--) {
        for (Integer j = 0; j < str.length(); j++) {
            if (i != j) {
                return false
            }
        }
    }

    return true;
}