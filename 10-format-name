public String formatName(String firstName, String lastName) {
    
    if (firstName == null && (lastName == null)) {
        return '';
    }
    else if (firstName == null && (lastName == '')) {
        return '';
    }
    else if (firstName == '' && (lastName == null)) {
        return '';
    }
    else if (firstName == '' && (lastName == '')) {
        return '';
    }
}