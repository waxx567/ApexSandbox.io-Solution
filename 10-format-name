public String formatName(String firstName, String lastName) {
    
    if ((firstName == null && lastName = null) || (firstName == null && lastName == '') || (firstName == '' && lastName == '')) {
        return '';
    } 
    else if ((firstName == null && lastName != null) || (firstName == null && lastName != '') || (firstName == '' && lastName != null) || (firstName == '' && lastName != '')) {
        return lastName;
    }
    else {
        return firstName;
    }
}