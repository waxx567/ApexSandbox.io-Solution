public String getAccountsInJSONFormat(List<Account> accounts){
    String result = '';

    for (Account account : accounts) {
        // Query the acoount to get the relevant information
        account  = [SELECT Id, Name, BillingCity FROM account];
        // Convert the account in order to access the values
        // ID id = s.ID;
        // Account convertedAccount = (Account)s;
        result = JSON.serialize(account);
    }

    return result;
}
