public Map<String,String> getContextUserInformation(){
    // Create a map to store context user information
    Map<String,String> userInfo = new Map<String,String>();

    // Populate the map
    UserInfo.put('UserName', userMap.getName());
    userInfo.put('ProfileId', userMap.getProfileId());
    userInfo.put('EmailId', userMap.getUserEmail());
    userInfo.put('Type', userMap.getUserType());

    // Return the map
    return userInfo;
}