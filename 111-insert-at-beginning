public void insertAtStart(String cityName, List<String> cities) {
    if (cities.isEmpty()) {
        cities.add(cityName);
    } else {
        String temp = cities[0];
        cities[0] = cityName;
        cities.add('');
        for (Integer i = 1; i < cities.size(); i++) {
            cities[i] = temp;
            temp = cities[i + 1];
        }
    }
}