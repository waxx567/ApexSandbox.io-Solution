public static String reverseWords(String str){
    
    List<String> words = str.split(' ');
    Integer[] reversedInts = new List<Integer>();
    System.debug(words);

    for (String word:words){
        for (Integer i = word.length() - 1; i >= 0; i--) {
            reversedInts.add(word.charAt(i));
        }
    }
    System.debug(reversedInts);

    List<List<Integer>> charArr= new Integer[]{reversedInts};
    String convertedChar = String.fromCharArray(charArr);
    System.debug(convertedChar);

    return '';
    // Integer[] chars = str.getChars();
    // Integer[] reverseInts = new List<Integer>();

    // for (Integer i = chars.size() - 1; i >= 0; i--) {
    //     reverseInts.add(i);
    // }
    // System.debug(reverseInts);

    // String reverseStr = String.fromCharArray(reverseInts); 
    // System.debug(reverseStr);
    // return reverseStr;
}