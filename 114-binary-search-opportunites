public static Integer search(List<Opportunity> opportunities, Integer target){
    System.debug('Target: ' + target);
    Integer left = 0;
    Integer right = opportunities.size();

    while (left < right) {
        // Find the middle
        Integer middle = (left + right) / 2;
        System.debug('Middle: ' + middle);

        if (opportunities.Amount[middle] == target) {
            return middle;
        }

        if (target < opportunities.Amount[middle]) {
            right = middle - 1;
        } else {
            left = middle + 1;
        }
    }

    return -1;
}