public static Integer search(List<Opportunity> opportunities, Integer target){
    Integer left = 0;
    Integer right = opportunities.size();

    while (left < right) {
        // Find the middle
        Integer middle = (left + right) / 2;

        if (middle == target) {
            return middle;
        }

        if (target < middle) {
            right = middle - 1;
        } else {
            left = middle + 1;
        }
    }

    return -1;
}