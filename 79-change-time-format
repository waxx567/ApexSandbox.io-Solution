public String changeTimeFormat(String strTime) {

    String hour = strTime.substrinsBefore(':');
    String mins = strTime.substringAfter(':');

    Integer intHour = Integer.valueOf(hour);

    if (intHour < 12) {
        String lowHour = String.valueOf(intHour.format());
        return lowHour + ':' + mins + ' AM';
    }
    else if (intHour > 12) {
        intHour = intHour - 12;
        String highHour = String.valueOf(intHour.format());
        return highHour + ':' + mins + ' PM'; 
    }


}