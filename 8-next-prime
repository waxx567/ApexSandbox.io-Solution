public Integer nextPrime(Integer num) {

    Integer current = num + 1;
    Boolean check = false;
     
    while (check != true) {
        
        Integer remainder = math.mod(current, 2);

        if (remainder == 0) {
            check = true;
        }
        else {
            current += 1;
        }
    }
    
    if (check == true) {
        return current;
    }  
}
